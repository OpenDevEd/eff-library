{% extends 'kerko/layout.html.jinja2' %}

{% block meta_title_inner -%}
    {%- if title %}{{ title|striptags|escape }} â€“ {% endif %}{{ config.KERKO_TITLE|striptags|escape -}}
{% endblock %}

{%- block metas %}
    {{- super() }}
    <link rel="icon" type="image/png" href="{{ url_for('static', filename='dist/images/favicon.ico') }}">
    <link rel="apple-touch-icon" href="{{ url_for('static', filename='dist/images/favicon.ico') }}">
    <meta name="msapplication-TileImage" content="{{ url_for('static', filename='dist/images/favicon.ico') }}">
{%- endblock metas %}

{% block styles %}
    {%- assets "css_styles" %}
        <link rel="stylesheet" href="{{ ASSET_URL }}">
    {%- endassets %}
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:400,400i,700,700i|Oswald:400,700&display=swap&subset=latin-ext">
{% endblock styles %}

{% block navbar %}
    <nav class="navbar navbar-expand-lg navbar-light bg-white d-print-none">
        <div class="container">
            {%- block navbar_brand %}
                <div class="navbar-brand">
                    <a class="d-block brand-title" href="{{ config.HOME_URL }}">{{ config.HOME_TITLE }}</a>
                    {% if config.HOME_SUBTITLE %}<span class="d-block brand-subtitle text-primary">{{ config.HOME_SUBTITLE }}</span>{% endif %}
                </div>
            {%- endblock navbar_brand %}
            {%- block navbar_toggler %}
                <div class="d-lg-none m-auto">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-content" aria-controls="navbar-content" aria-expanded="false" aria-label="{{ _('Toggle navigation') }}">
                        <span class="navbar-toggler-icon"></span>
                        <span class="navbar-toggler-text">{{ _('Menu') }}</span>
                    </button>
                </div>
            {%- endblock navbar_toggler %}
            {%- block navbar_content %}
                <div id="navbar-content" class="collapse navbar-collapse">
                    <ul class="navbar-nav justify-content-end">
                        {%- block navbar_items %}
                            <li class="nav-item active">
                                <a class="nav-link" href="{{ url_for('kerko.search') }}" aria-current="true">{{ config.NAV_TITLE }}</a>
                            </li>
                        {%- endblock navbar_items %}
                    </ul>
                </div>
            {%- endblock navbar_content %}
        </div>
    </nav>
{% endblock navbar %}

{% block footer %}
<div class="container text-center">
    <div class="row pt-2 pb-3">
        <div class="col-lg-12">
            <div>
                <p class="brand-name" style="font-size: 1.35rem; font-weight:bold">Developed in partnership</p>
            </div>
        </div>
        <div class="col-lg-12">
            <a href="https://opendeved.net" style="text-decoration:none;" target="_blank">
                <img src="{{ url_for('static', filename='dist/images/opendeved.png') }}" class="mr-3" style="height: 60px" alt="Open Development & Development">
            </a>
                <span>&</span>
            <a href="https://educationendowmentfoundation.org.uk/" style="text-decoration:none;" target="_blank">
                <img src="{{ url_for('static', filename='dist/images/eef.svg') }}" class="ml-3" style="height: 60px" alt="EEF">
            </a>
        </div>
    </div>
    <div class="text-center pt-5 pb-3">
        Powered by <a href="https://zotero.org">Zotero</a> and <a href="https://github.com/whiskyechobravo/kerko">Kerko</a>.
    </div>
</div>
{% endblock %}

{% block body_scripts %}
    {%- assets "common_js" %}
        <script src="{{ ASSET_URL }}"></script>
    {%- endassets %}
{% endblock body_scripts %}
